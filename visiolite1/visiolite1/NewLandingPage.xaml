<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="visiolite1.NewLandingPage">
  <ContentPage.Content>
    <StackLayout BackgroundColor="Teal" Padding="50,50,50,50">
      <StackLayout >
        <Label HorizontalTextAlignment="Center" VerticalTextAlignment="Center">       
          <Label.FormattedText>
            <FormattedString>
              <Span Text="Welcome to" ForegroundColor="White"  FontSize="Large"/>
              <Span Text=" Visiolite" ForegroundColor="White"  FontSize="Large" FontAttributes="Bold"/>
            </FormattedString>
          </Label.FormattedText>
        </Label>
      </StackLayout>
      <StackLayout>
        <Button x:Name="continueButton" Text="Tap to continue" Clicked="tapToContinue" TextColor="White" FontSize="Small" BackgroundColor="Transparent"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>